#include <iostream>
using namespace std;
int main() {
 int n;
 cout << "Imput N" << endl;
cin >> n;
  
  int mas[n];
  
  
  for (int i = 0; i<n; i++){
      cout << "Imput massaive [" << i <<"]" << endl;
      cin >> mas[i];
  }
  
  
 cout << "" << endl;
    
    int k = 0;
  
  for (int j = n -1; j>=0; j--){
      if (!(mas[j] % 2)){
         cout << mas[j] << endl;
          k++;
      }
    }
   cout<< "number" << k << endl;
}
