#include <iostream>
using namespace std;
int main() {
int n,d,a;
cout<<"Imput N"<<endl;
    cin>>n;
    cout<<"Imput A"<<endl;
    cin>>a;
    cout<<"Imput D"<<endl;
    cin>>d;
int mass[]{ n };
for (int i = 0; i < n; i++)
{
mass[i]=a+d*i;
cout <<i+1<< "member of the progression ";
cout << mass[i] << endl;
}
}
