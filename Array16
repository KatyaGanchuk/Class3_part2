#include <iostream>
using namespace std;
int main() {
int n;
    cout<<"Imput n "<<endl; 
    cin>>n;

    int a[n];
    cout<<"Imput elements mas "<<endl;
    for (int i = 0; i < n; i++) {
        cin>>a[i];
    }

    cout<<"Elements of the array in the specified order"<<endl;
    int i = 0, j = n-1;
    while (i <= j) {
        if (i == j) {
            cout<<a[i];
        } else {
            cout<<a[i]<<" "<<a[j]<<" ";
        }
        i++;
        j--;
    }
    cout<<endl;
}
